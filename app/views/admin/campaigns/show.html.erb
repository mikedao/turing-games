<h1>Campaign Details</h1>

<div id="<%= @campaign.title.parameterize %>">
  <div>
    <p><h2><%= @campaign.title %></h2></p>
  </div>
  <div>
    <%= image_tag @campaign.image if @campaign.image.present? %>
  </div>
  <div>
    <p><%= @campaign.description %></p>
  </div>
  <div>
    <p><%= button_to 'Delete', admin_campaign_path(@campaign), method: :delete %>
  </div>
  <div>
    <p><%= link_to 'Edit', edit_admin_campaign_path(@campaign) %></p>
  </div>
</div>